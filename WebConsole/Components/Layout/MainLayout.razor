@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider/>
<MudPopoverProvider/>

@* Needed for dialogs *@
<MudDialogProvider/>

@* Needed for snackbars *@
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudText Typo="Typo.h5" Class="ml-3 mr-2">Cve 專案</MudText>

        <MudButton StartIcon="@Icons.Material.Filled.Search"
                   Style="color: #fefefe; margin-right: 24px;"
                   Size="Size.Large"
                   Href="/">
            資料查詢
        </MudButton>

        <MudButton StartIcon="@Icons.Material.Filled.ImportExport"
                   Style="color: #fefefe"
                   Size="Size.Large"
                   Href="/ImportData">
            資料匯入
        </MudButton>

        <MudSpacer />
    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>